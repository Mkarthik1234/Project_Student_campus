<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/get_started_page_layout">

<LinearLayout
    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:text="Enter Student details"
        android:layout_margin="10dp"
        android:textColor="#FFFF"
        android:textSize="30sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="118dp">

        <ImageView
            android:id="@+id/imageView3_stureg"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:src="@drawable/student_ragistration"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/edittext_name_stureg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/add_image"
            android:layout_width="82dp"
            android:layout_height="29dp"
            android:layout_marginStart="72dp"
            android:layout_marginBottom="28dp"
            android:src="@drawable/add_profile_pic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageView3_stureg"
            app:layout_constraintHorizontal_bias="0.724"
            app:layout_constraintStart_toStartOf="@+id/imageView3_stureg"
            app:layout_constraintTop_toTopOf="@+id/imageView3_stureg"
            app:layout_constraintVertical_bias="0.795" />

        <EditText
            android:id="@+id/edittext_name_stureg"
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/student_registration_edit_text"
            android:gravity="center_vertical"
            android:hint="Enter Full Name"
            android:paddingStart="20dp"
            android:textColorHint="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.916"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.402" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/edittext_usn_stureg"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/student_registration_edit_text"
        android:gravity="center_vertical"
        android:hint="Enter USN"
        android:paddingStart="20dp"
        android:layout_gravity="center"
        android:textColorHint="#000000"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/edittext_email_stureg"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/student_registration_edit_text"
        android:gravity="center_vertical"
        android:hint="Enter Email"
        android:paddingStart="20dp"
        android:layout_gravity="center"
        android:textColorHint="#000000"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/edittext_mobile_stureg"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/student_registration_edit_text"
        android:gravity="center_vertical"
        android:hint="Enter Mobile No."
        android:paddingStart="20dp"
        android:inputType="phone"
        android:layout_gravity="center"
        android:textColorHint="#000000" />

    <EditText
        android:id="@+id/edittext_address_stureg"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/student_registration_edit_text"
        android:gravity="center_vertical"
        android:hint="Address"
        android:inputType="textMultiLine"
        android:layout_gravity="center"
        android:paddingStart="20dp"
        android:textColorHint="#000000" />

    <EditText
        android:id="@+id/edittext_password_stureg"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/student_registration_edit_text"
        android:gravity="center_vertical"
        android:hint="Create Password"
        android:layout_gravity="center"
        android:paddingStart="20dp"
        android:textColorHint="#000000" />

    <EditText
        android:id="@+id/edittext_confirm_password_stureg"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/student_registration_edit_text"
        android:gravity="center_vertical"
        android:hint="Connfirm password"
        android:layout_gravity="center"
        android:paddingStart="20dp"
        android:textColorHint="#000000" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="256dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="409dp"
            android:layout_height="241dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/register_student"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.971" />

        <ImageButton
            android:id="@+id/imgbtn_register"
            android:layout_width="53dp"
            android:layout_height="47dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:background="@null"
            android:src="@drawable/add"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.87" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</ScrollView>