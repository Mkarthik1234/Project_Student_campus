<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sign_in"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipToOutline="true"
    android:background="@drawable/get_started_page_layout">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:src="@drawable/sign_up" />

    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="31dp"
        android:background="@drawable/get_started_btn"
        android:text="Sign up"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edittext_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_sign_up"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="106dp"
        android:background="@drawable/get_started_btn"
        android:gravity="center_vertical"
        android:hint="Create a password"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFF"
        />

    <EditText
        android:id="@+id/edittext_confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_above="@+id/btn_sign_up"
        android:layout_alignTop="@+id/edittext_password"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/get_started_btn"
        android:gravity="center_vertical"
        android:hint="Confirm passowrd"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFF" />

    <EditText
        android:id="@+id/edittext_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edittext_password"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/get_started_btn"
        android:gravity="center_vertical"
        android:hint="Enter your Email"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFF" />

</RelativeLayout>