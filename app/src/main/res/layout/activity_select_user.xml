<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<LinearLayout
    android:id="@+id/home"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:clipToOutline="true"
    android:background="@drawable/get_started_page_layout"
    >

    <TextView
        android:id="@+id/are_you_a_s"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="who are you?"
        android:layout_margin="30dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/imgbtn_admin_userselect"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/user_professor"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/textview_admin_userselect"
        android:layout_width="157dp"
        android:layout_height="34dp"
        android:text="Admin"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        />

    <ImageButton
        android:id="@+id/imgbtn_professor"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/user_professor"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/professor"
        android:layout_width="157dp"
        android:layout_height="34dp"
        android:text="Professor"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        />

    <ImageButton
        android:id="@+id/imgbtn_student"
        android:layout_width="wrap_content"
        android:layout_height="139dp"
        android:layout_below="@+id/imgbtn_professor"
        android:layout_gravity="center"
        android:background="@drawable/user_student" />

    <TextView
        android:id="@+id/textView_student"
        android:layout_width="157dp"
        android:layout_height="34dp"
        android:text="Student"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
 />

</LinearLayout>
</ScrollView>